<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bankSys.Transfer">
	<children>
		<VBox layoutX="14.0" layoutY="54.0" prefHeight="120.0" prefWidth="110.0">
         	<children>
            	<Button fx:id="balanceBtn" mnemonicParsing="false" prefHeight="30.0" prefWidth="110.0" text="Check balance" />
            	<Button fx:id="depositBtn" mnemonicParsing="false" prefHeight="30.0" prefWidth="110.0" text="Deposit/withdraw" />
            	<Button fx:id="transferBtn" mnemonicParsing="false" prefHeight="30.0" prefWidth="110.0" text="Transfer" />
            	<Button fx:id="dataBtn" mnemonicParsing="false" prefHeight="30.0" prefWidth="110.0" text="Account data" />
         	</children>
      	</VBox>
      <Label alignment="CENTER" layoutX="160.0" layoutY="182.0" text="Transfer balance" textAlignment="CENTER" />
      <Button layoutX="174.0" layoutY="278.0" mnemonicParsing="false" text="Transfer" onAction="#transferBalance"/>
      <TextField fx:id="amountField" layoutX="129.0" layoutY="242.0" promptText="Amount" />
      <Label fx:id="statusLabel" alignment="CENTER" layoutX="186.0" layoutY="318.0" text="Label" textAlignment="CENTER" visible="false" />
      <TextField fx:id="recipent" layoutX="129.0" layoutY="207.0" promptText="Recipent username" />
      </children>
</AnchorPane>
