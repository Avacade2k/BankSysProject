<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bankSys.DepositWithdraw">
	<children>
		<VBox layoutX="14.0" layoutY="54.0" prefHeight="120.0" prefWidth="110.0">
         	<children>
            	<Button fx:id="balanceBtn" mnemonicParsing="false" prefHeight="30.0" prefWidth="110.0" text="Check balance" />
            	<Button fx:id="depositBtn" mnemonicParsing="false" prefHeight="30.0" prefWidth="110.0" text="Deposit/withdraw" />
            	<Button fx:id="transferBtn" mnemonicParsing="false" prefHeight="30.0" prefWidth="110.0" text="Transfer" />
            	<Button fx:id="dataBtn" mnemonicParsing="false" prefHeight="30.0" prefWidth="110.0" text="Account data" />
         	</children>
      	</VBox>
      <Label fx:id="mainLabel" alignment="CENTER" layoutX="172.0" layoutY="163.0" text="I'd like to..." textAlignment="CENTER" />
      <Button fx:id="chooseWithdraw" layoutX="229.0" layoutY="200.0" mnemonicParsing="false" text="Withdraw" onAction="#withdrawClick" />
      <Button fx:id="chooseDeposit" layoutX="114.0" layoutY="200.0" mnemonicParsing="false" text="Deposit" onAction="#depositClick"/>
      <Label fx:id="amountLabel" alignment="CENTER" layoutX="164.0" layoutY="252.0" text="Enter amount" textAlignment="CENTER" visible="false" />
      <TextField fx:id="amountField" layoutX="126.0" layoutY="277.0" promptText="Amount" visible="false" />
      <Button fx:id="submitBtn" layoutX="173.0" layoutY="311.0" mnemonicParsing="false" text="Submit" visible="false" onAction="#submit" />
      </children>
</AnchorPane>
